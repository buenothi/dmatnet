<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="dmatnet-pu">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/MySQLDS</jta-data-source>

		<class>br.com.smartems.dmatnet.entities.pessoa.EnderecoEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.TelefoneEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.EmailEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.AbstractPessoaEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.PessoaFisicaDocumentosEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.TrabalhadorCadastroEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.TrabalhadorEstrangeiroEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.TrabalhadorDeficienteEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.LocaisTrabalho</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.TrabalhadorAfastamentoEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.TrabalhadorEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.AbstractPessoaJuridicaEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.AbstractPessoaFisicaEntity</class>
		<class>br.com.smartems.dmatnet.entities.pessoa.PessoaFisicaCadastro</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>

	</persistence-unit>
</persistence>